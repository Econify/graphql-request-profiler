{
  "exclude": [
    "node_modules/*/**",
    "examples/*/**",
    "dist/**/*",
    "jest*",
    "test/**/*"
  ],
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "declaration": true
  }
}
